{
  "name": "bsocial",
  "version": "0.1.0",
  "description": "CLI tool to post to Mastodon and Bluesky",
  "main": "dist/cli.js",
  "bin": {
    "bsocial": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:post": "ts-node scripts/test-post.ts",
    "lint": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint && npm run typecheck"
  },
  "keywords": [
    "mastodon",
    "bluesky",
    "social",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@atproto/api": "^0.15.17",
    "dotenv": "^16.4.1",
    "node-fetch": "^3.3.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
