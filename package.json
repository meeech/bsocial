{
  "type": "module",
  "name": "bsocial",
  "version": "0.1.0",
  "description": "CLI tool to post to Mastodon and Bluesky",
  "main": "dist/cli.js",
  "bin": {
    "bsocial": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:post": "ts-node scripts/test-post.ts",
    "lint": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint && npm run typecheck"
  },
  "keywords": [
    "mastodon",
    "bluesky",
    "social",
    "cli"
  ],
  "author": "swe & meeech",
  "license": "MIT",
  "dependencies": {
    "@atproto/api": "^0.15.17",
    "dotenv": "^16.5.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
